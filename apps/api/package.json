{
  "name": "@pharos/api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "nest start --watch",
    "start": "node dist/main.js",
    "lint": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "db:generate": "pnpm --filter @pharos/db db:generate",
    "db:migrate": "pnpm --filter @pharos/db db:migrate",
    "db:reset": "pnpm --filter @pharos/db db:reset"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.15",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-fastify": "^10.4.15",
    "@nestjs/schedule": "^4.1.1",
    "@pharos/db": "workspace:*",
    "@pharos/shared": "workspace:*",
    "argon2": "^0.41.1",
    "bullmq": "^5.34.6",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "fastify": "^4.28.1",
    "ioredis": "^5.4.2",
    "nestjs-pino": "^4.3.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "pino-http": "^10.4.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.15",
    "@types/node": "^22.10.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "vitest": "^2.1.8"
  }
}
