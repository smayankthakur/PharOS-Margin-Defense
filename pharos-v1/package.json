{
  "name": "pharos-v1",
  "private": true,
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "dev:infra": "docker compose up -d postgres redis",
    "dev:ports": "kill-port 3000 4000",
    "dev:db": "corepack pnpm --filter @pharos/db db:push",
    "dev:api": "corepack pnpm --filter @pharos/api dev",
    "dev:worker": "corepack pnpm --filter @pharos/worker dev",
    "dev:web": "corepack pnpm --filter @pharos/web dev",
    "dev:services": "concurrently -k -n api,worker,web -c cyan,magenta,green \"corepack pnpm dev:api\" \"corepack pnpm dev:worker\" \"corepack pnpm dev:web\"",
    "dev": "corepack pnpm dev:ports && corepack pnpm dev:infra && corepack pnpm dev:db && corepack pnpm dev:services",
    "build": "corepack pnpm -r --filter @pharos/db --filter @pharos/shared --filter @pharos/ui --filter @pharos/api --filter @pharos/worker --filter @pharos/web build",
    "lint": "corepack pnpm -r --filter @pharos/db --filter @pharos/shared --filter @pharos/ui --filter @pharos/api --filter @pharos/worker --filter @pharos/web lint",
    "test": "corepack pnpm -r --filter @pharos/shared --filter @pharos/api test",
    "typecheck": "corepack pnpm -r --filter @pharos/db --filter @pharos/shared --filter @pharos/ui --filter @pharos/api --filter @pharos/worker --filter @pharos/web typecheck",
    "db:migrate": "corepack pnpm --filter @pharos/db db:migrate",
    "db:seed": "corepack pnpm --filter @pharos/api seed:demo"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "concurrently": "^9.1.2",
    "kill-port": "^2.0.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.4.2",
    "turbo": "^2.4.2",
    "typescript": "^5.7.3"
  }
}
