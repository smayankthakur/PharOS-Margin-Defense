{
  "name": "pharos-v1",
  "private": true,
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "dev": "corepack pnpm -r --parallel --filter @pharos/web --filter @pharos/api --filter @pharos/worker dev",
    "build": "corepack pnpm -r --filter @pharos/db --filter @pharos/shared --filter @pharos/ui --filter @pharos/api --filter @pharos/worker --filter @pharos/web build",
    "lint": "corepack pnpm -r --filter @pharos/db --filter @pharos/shared --filter @pharos/ui --filter @pharos/api --filter @pharos/worker --filter @pharos/web lint",
    "test": "corepack pnpm -r --filter @pharos/shared --filter @pharos/api test",
    "typecheck": "corepack pnpm -r --filter @pharos/db --filter @pharos/shared --filter @pharos/ui --filter @pharos/api --filter @pharos/worker --filter @pharos/web typecheck",
    "db:migrate": "corepack pnpm --filter @pharos/db db:migrate",
    "db:seed": "corepack pnpm --filter @pharos/api seed:demo"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.4.2",
    "turbo": "^2.4.2",
    "typescript": "^5.7.3"
  }
}
