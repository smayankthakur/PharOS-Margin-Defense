{
  "name": "pharos-margin-defense",
  "private": true,
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "db:generate": "turbo run db:generate",
    "db:migrate": "pnpm --filter @pharos/db db:migrate",
    "db:reset": "turbo run db:reset"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@prisma/client",
      "@prisma/engines",
      "argon2",
      "esbuild",
      "msgpackr-extract",
      "prisma",
      "sharp"
    ]
  },
  "devDependencies": {
    "turbo": "^2.4.2",
    "typescript": "^5.7.3"
  }
}
